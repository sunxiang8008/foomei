<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="hibernateCache">

	<diskStore path="java.io.tmpdir/ehcache/foomei/hibernate" />

	<!-- DefaultCache setting. -->
	<defaultCache maxEntriesLocalHeap="10000" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600"
		overflowToDisk="true" maxEntriesLocalDisk="100000" />

	<!-- Special objects setting. -->
	<cache name="com.foomei.core.entity.User" maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="10000" />
	<cache name="com.foomei.core.entity.User.roleList" maxEntriesLocalHeap="1000" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="10000" />
	<cache name="com.foomei.core.entity.Role" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.Role.permissionList" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.Permission" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.GroupTree" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.UserGroup" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.User.groupList" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.UserGroup.roleList" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.Config" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.Area" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.DataType" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
	<cache name="com.foomei.core.entity.DataDictionary" maxEntriesLocalHeap="100" eternal="true" overflowToDisk="true"
		maxEntriesLocalDisk="1000" />
</ehcache>
