<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cache="http://www.springframework.org/schema/cache"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/cache classpath:org/springframework/cache/config/spring-cache-4.0.xsd"
	default-lazy-init="true">

	<description>Guava Cache配置文件</description>

	<cache:annotation-driven />

	<bean id="cacheManager" class="org.springframework.cache.guava.GuavaCacheManager">
		<property name="cacheSpecification" value="concurrencyLevel=4,expireAfterWrite=1h" />
		<property name="cacheNames">
			<list>
				<value>default</value>
			</list>
		</property>
	</bean>
</beans>