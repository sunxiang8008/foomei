package ${package}.entity;

import javax.persistence.Entity;
import javax.persistence.Table;

import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

import com.foomei.common.entity.${idStrategy}Entity;
<#if hasCreateRecord>
import com.foomei.common.entity.CreateRecord;
</#if>
<#if hasUpdateRecord>
import com.foomei.common.entity.UpdateRecord;
</#if>
<#if hasDeleteRecord>
import com.foomei.common.entity.DeleteRecord;
</#if>

/**
 * ${comment}
 */
@Getter
@Setter
@ToString(callSuper=true)
@NoArgsConstructor
@Entity
@Table(name = "${tableName}")
@SuppressWarnings("serial")
public class ${model} extends ${idStrategy}Entity<#if hasImplement> implements ${implements}</#if> {
  <#list props?keys as k>
  public static final String PROP_${props[k]} = "${k}";
  </#list>

  <#list consts as const>
  ${const}
  </#list>
	
  <#list fields?keys as k>
  private ${fields[k].first} ${k};//${fields[k].second}
  </#list>

  <#if hasCreateRecord>
  public boolean isCreated() {
    return id != null;
  }
  </#if>

  <#if hasDeleteRecord>
  public void markDeleted() {
    delFlag = true;
  }
  </#if>
	
}